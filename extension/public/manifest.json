{
  "manifest_version": 2,
  "name": "Neutrify",
  "version": "0.1",

  "description": "Neutrify MVP",
  "homepage_url": "https://github.com/behjieshen/neutrify",
  "icons": {
    "48": "images/extension-48.png"
  },

  "permissions": ["tabs", "cookies", "<all_urls>"],

  "browser_action": {
    "default_icon": "images/extension-48.png",
    "default_title": "Neutrify",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["static/js/background.js"]
  },

  "content_scripts": [{
    "js": [ "static/js/content.js" ],
    "matches" : ["*://*/*"]
  }],

  "options_ui": {
    "page": "options.html"
  }
}
