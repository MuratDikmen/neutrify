{
  "manifest_version": 2,
  "name": "Neutrify",
  "version": "1.0",

  "description": "",
  "homepage_url": "https://github.com/behjieshen/neutrify",
  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": ["activeTab"],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Neutrify",
    "default_popup": "index.html"
  },

  "content_scripts": [
    {
      "matches" : ["<all_urls>"],
      "js": ["content_scripts/index.js"]
    }
  ]
}
